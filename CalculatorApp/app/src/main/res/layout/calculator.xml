<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/containerLogin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_gradient"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_white_bg"
        android:layout_marginBottom="117dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="45dp"
        android:padding="24dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Диапазон чисел"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/darkGreen"
            android:textSize="20dp"
            android:paddingBottom="10dp"/>
        <TextView
            android:id="@+id/errorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textSize="15dp"
            android:paddingBottom="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/startInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="5dp"
                app:errorIconDrawable="@null"
                app:hintTextColor="@color/darkGreen"
                app:counterMaxLength="7"
                app:counterEnabled="true"
                app:boxStrokeColor="@color/darkGreen"
                app:cursorColor="@color/darkGreen"
                app:boxStrokeErrorColor="@color/red"
                android:hint="От">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/startInputEditText"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/endInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                app:errorIconDrawable="@null"
                android:hint="До"
                app:counterMaxLength="7"
                app:counterEnabled="true"
                app:hintTextColor="@color/darkGreen"
                app:boxStrokeErrorColor="@color/red"
                app:cursorColor="@color/darkGreen"
                app:boxStrokeColor="@color/darkGreen">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/endInputEditText"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <Spinner
            android:id="@+id/spinnerTasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"
            android:backgroundTintMode="src_in"
            android:entries="@array/tasks"
            android:backgroundTint="@color/darkGreen"
            android:layout_marginTop="20dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Начать поиск"
            android:backgroundTint="@color/darkGreen"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:onClick="startMethod"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Очистить"
            android:backgroundTint="@color/darkGreen"
            android:textColor="@color/white"
            android:layout_marginTop="3dp"
            android:onClick="clearFields"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="История"
            android:backgroundTint="@color/darkGreen"
            android:textColor="@color/white"
            android:layout_marginTop="3dp"
            android:onClick="showHistory"/>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:fillViewport="true"
            android:paddingTop="20dp">
            <TextView
                android:id="@+id/logs"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#F4F4F4"
                android:textColor="@color/black"/>
        </ScrollView>
    </LinearLayout>
</LinearLayout>